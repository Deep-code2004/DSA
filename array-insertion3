#include <iostream>
using namespace std;
int main()
{
    int arr[6], n, pos, x, i;
    cout << "\n Enter size of an array:";
    cin >> n;
    cout << "Enter array Elements: ";
    for (i = 0; i < n; i++)
    {
        cin >> arr[i];
    }
    cout << "\n Enter the Specific Position to Indert Element : ";
    cin >> pos;
    cout << "\n Enter Element  to insert At Given Position: ";
    cin >> x;
    for (i = n - 1; i >= pos - 1; i--)
    {
        arr[i + 1] = arr[i];
    }
    arr[pos - 1] = x;
    n++;
    for (i = 0; i < n; i++)
    {
        cout << arr[i] << endl;
    }
}